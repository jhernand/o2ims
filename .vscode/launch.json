{
        "version": "0.2.0",
        "configurations": [
                {
                        "name": "version",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "version"
                        ]
                },
                {
                        "name": "start deployment-manager-server",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceFolder}",
                        "args": [
                                "start",
                                "deployment-manager-server",
                                "--log-level=debug",
                                "--cloud-id=6575154c-72fc-4ed8-9a87-a81885ab38bb",
                                "--backend-url=${env:BACKEND_URL}",
                                "--backend-token=${env:BACKEND_TOKEN}",
                        ]
                },
                {
                        "name": "test",
                        "type": "go",
                        "request": "launch",
                        "mode": "test",
                        "program": "${fileDirname}"
                }
        ]
}